<% include ../partials/header %>

<form action="/projects/<%= project._id %>/comment" method="POST">
    <div class="container">
        <h1>Add a new comment to <%= project.name %></h1>
        <div class="form-group">
            <!-- DOES NOT PASS THE AUTHOR TO THE DB -->
            <input class="form-control" type="text" name="comment[author]" placeholder="Author">
        </div>
        <div class="form-group">
            <input class="form-control" type="text" name="comment[text]" placeholder="Text">
        </div>
        <button class="btn btn-primary">Submit</button>    
    </div>
</form>

<% include ../partials/footer %>