<% include ../partials/header %>

<!--Show Project-->
<div class="container">
    <div class="jumbotron">
        <h1 class="display-3 text-center"><%= project.name %></h1>
        
        <img class="img-thumbnail center-block" src="<%= project.image %>"></img>
        
        <p><%= project.description %></p>
            
        <h5><strong><%= project.author %></strong> - Difficulty: <%= project.difficulty %></h5>

        <a class="btn btn-success" href="/projects/<%= project._id %>/edit">Edit</a>
    </div>
    
    <!--Show Comments-->
    <div class="container-fluid">
        <% project.comment.forEach(function(comment){ %>
               <p><strong><%= comment.author %></strong> - <%= comment.text %></p>
        <% })%>
    </div>

</div>

<% include ../partials/footer %>