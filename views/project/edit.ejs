<% include ../partials/header %>

<form action="/projects/<%= project._id %>?_method=PUT" method="POST">
    <div class="container">
        <h1>Edit <%= project.name %></h1>
        <div class="form-group">
            <input class="form-control" type="text" name="project[name]" value="<%= project.name %>">
        </div>
        <div class="form-group">
            <input class="form-control" type="text" name="project[image]" value="<%= project.image %>">
        </div>
        <div class="form-group">
            <textarea class="form-control" name="project[description]"><%= project.description %></textarea>
        </div>
        <button class="btn btn-primary">Submit</button>    
    </div>
</form>

<% include ../partials/footer %>